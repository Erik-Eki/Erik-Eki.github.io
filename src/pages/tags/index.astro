---
import BaseLayout from "../../layouts/BaseLayout.astro";

const pageTitle = "Tags";

const allPosts = await Astro.glob("../posts/*.md");
const uniqueTags = [...new Set(allPosts.map((post) => post.frontmatter.tags).flat())];
---
<style>
  a {
    color: #00539F;
  }
        
  .tags {
    display: flex; 
    flex-wrap: wrap; 
    margin: 0 auto;  
  }

  .tag {
    margin: 0.25em;
    border: solid 1px  rgb(134 25 143);
    border-radius: .5em;
    padding: .4em 1.2em;
    font-size: 1.15em;
    background-color: #F8FCFD;
  }
</style>

<BaseLayout pageTitle={pageTitle}>
  <div>All available tags:
    <!-- <div class=" flex flex-row p-1"> -->
      <div class="tags">
    {uniqueTags.map((tag) => {
      return (
        <p class="tag"><a href={`/tags/${tag}`}>{tag}</a></p>
        // <div class=" m-1 p-1 pl-4 pr-4 border rounded-sm border-fuchsia-800">
          
        // </div>
      )
    })}
    </div>
  </div>
</BaseLayout>